{
  "manifest_version": 2,

  "name": "The Cookie Monster",
  "description": "Removes the annoying Cookie notifications from various web sites",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "https://api.parse.com/"
  ],

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["monster.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html"
}